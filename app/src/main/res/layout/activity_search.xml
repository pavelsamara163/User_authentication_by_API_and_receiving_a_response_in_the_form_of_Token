<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="@android:drawable/gallery_thumb">

    <TextView
        android:text="Диклофенак"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:background="@android:drawable/edit_text"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="13dp" />

    <TabHost
        android:id="@+id/TabHost"
        android:layout_width="200dip"
        android:layout_height="300dip"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background">

            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="304dp">

                <LinearLayout
                    android:id="@+id/two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:attr/colorForegroundInverse"
                    android:orientation="vertical">

                    <TextView
                        android:text="Дозировка и кратность"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9"
                        android:textAlignment="center"
                        android:layout_marginTop="15dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">

                        <TextView
                            android:text="400мг"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11"
                            android:textColor="@color/cardview_light_background"
                            android:background="@android:color/holo_red_dark"
                            android:padding="2dp" />

                        <TextView
                            android:text="3 р/д"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView14"
                            android:background="@android:color/holo_red_dark"
                            android:textColor="@color/cardview_light_background"
                            android:textAlignment="center"
                            android:layout_marginLeft="10dp"
                            android:padding="2dp" />

                        <TextView
                            android:text="до еды"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView19"
                            android:layout_weight="1"
                            android:background="@android:color/holo_red_dark"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_light_background"
                            android:textSize="14sp"
                            android:layout_marginLeft="10dp"
                            android:padding="2dp" />

                    </LinearLayout>

                    <TextView
                        android:text="Время приема"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView22"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">

                        <TextView
                            android:text="9:00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView25"
                            android:layout_weight="1"
                            android:textColor="@color/cardview_light_background"
                            android:background="@android:color/holo_blue_light"
                            android:layout_marginLeft="10dp"
                            android:padding="2dp" />

                        <TextView
                            android:text="13:30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView24"
                            android:layout_weight="1"
                            android:textColor="@color/cardview_light_background"
                            android:background="@android:color/holo_blue_light"
                            android:layout_marginLeft="10dp"
                            android:padding="2dp" />

                        <TextView
                            android:text="20:00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView23"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_marginLeft="10dp"
                            android:background="@android:color/holo_blue_light"
                            android:textColor="@color/cardview_light_background"
                            android:padding="2dp" />
                    </LinearLayout>

                    <TextView
                        android:text="Изменить кратность"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView26"
                        android:layout_marginTop="15dp"
                        android:textAlignment="center" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/clockView"
                        android:textAlignment="center"
                        android:background="@android:drawable/ic_menu_recent_history"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="70dp"
                        android:layout_marginLeft="70dp"
                        android:elevation="0dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@android:drawable/edit_text"
                    android:weightSum="1"
                    android:animationCache="false">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="Начало приема"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView13"
                            android:textAlignment="center"
                            android:paddingBottom="15dp"
                            android:layout_marginTop="30dp" />

                        <TextView
                            android:text="15/10/16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView15"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_light_background"
                            android:background="@android:color/holo_green_dark"
                            android:elevation="6dp"
                            android:layout_marginLeft="55dp"
                            android:layout_marginBottom="20dp"
                            android:padding="3dp" />

                        <TextView
                            android:text="Курс приема"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView16"
                            android:layout_marginLeft="50dp"
                            android:layout_marginBottom="10dp" />

                        <TextView
                            android:text="3     дня"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView17"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_light_background"
                            android:background="@android:color/holo_green_dark"
                            android:layout_marginLeft="65dp"
                            android:layout_marginBottom="15dp"
                            android:padding="3dp" />

                        <TextView
                            android:text="Выбрать дни приема"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView18"
                            android:textAlignment="center" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/calendarView"
                            android:layout_marginTop="15dp"
                            android:background="@android:drawable/ic_menu_today"
                            android:layout_marginLeft="60dp"
                            android:layout_marginRight="60dp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/thre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="?android:attr/colorForegroundInverse">

                    <TextView
                        android:text="Форма выпуска"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView27"
                        android:textAlignment="center"
                        android:layout_marginTop="30dp" />

                    <TextView
                        android:text="Ампулы"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView28"
                        android:textAlignment="center"
                        android:textColor="@color/cardview_light_background"
                        android:background="@android:color/holo_red_dark"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="20dp"
                        android:padding="5dp" />

                    <TextView
                        android:text="Способ введения"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView29"
                        android:textAlignment="center"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:text="в/м"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView31"
                        android:background="@android:color/holo_red_dark"
                        android:textColor="@color/cardview_light_background"
                        android:layout_marginLeft="65dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:layout_marginTop="15dp" />

                    <TextView
                        android:text="Колличество на курс"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView32"
                        android:textAlignment="center"
                        android:layout_marginTop="15dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="70dp">

                        <TextView
                            android:text="9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView33"
                            android:textColor="@color/cardview_light_background"
                            android:background="@android:color/holo_red_dark"
                            android:padding="3dp" />

                        <TextView
                            android:text="ампул"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView34"
                            android:textColor="@color/cardview_light_background"
                            android:background="@android:color/holo_red_dark"
                            android:layout_marginLeft="10dp"
                            android:padding="3dp" />

                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </TabHost>

</RelativeLayout>
