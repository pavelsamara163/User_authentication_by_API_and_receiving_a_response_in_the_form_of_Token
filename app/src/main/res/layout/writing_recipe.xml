<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screenWritingRec"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.syatkinpavel.mydoctor.Writing_recipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@color/cardview_light_background"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text=" ID номер пациента"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:id="@+id/textView"
        android:textColorLink="?attr/editTextColor"
        android:enabled="false"
        android:editable="false"
        android:elegantTextHeight="false"
        android:ellipsize="none"
        android:fontFamily="sans-serif"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:background="@android:drawable/edit_text" />

    <TextView
        android:text="I21.0 Острый трансмуральный инфаркт передней стенки миокарда. J18.0 Бронхопневмония неуточненная."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="18dp"
        android:id="@+id/textView3"
        android:textSize="10sp"
        android:layout_alignEnd="@+id/textView2"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:background="@android:drawable/edit_text" />

    <TextView
        android:text="Диагноз по МКБ 10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:background="@android:drawable/edit_text"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_marginRight="-33dp" />

    <TextView
        android:text="СХЕМА ЛИЧЕНИЯ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/textView4"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:background="@android:drawable/edit_text"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <WebView
        android:id="@+id/webView"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="-25dp"
        android:layout_alignEnd="@+id/textView6"
        android:layout_toEndOf="@+id/textView"
        android:layout_alignTop="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/textView5" />

    <Button
        android:text="Выписать рецепт"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:background="@android:color/holo_red_dark"
        android:textColor="@color/cardview_light_background"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp" />

    <TextView
        android:text="Диклофенак"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:background="@android:drawable/edit_text"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:text="Рецепт № CR789"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:background="@android:drawable/edit_text"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_above="@+id/textView2"
        android:layout_alignParentEnd="true" />

</RelativeLayout>